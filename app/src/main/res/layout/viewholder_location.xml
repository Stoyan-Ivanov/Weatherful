<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/viewholder_location_height"
    android:elevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/viewholder_location_card_radius"
    android:layout_margin="@dimen/viewholder_location_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/intro_gradient_background">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="@dimen/iv_location_width"
            android:layout_height="@dimen/iv_location_height"

            android:layout_margin="@dimen/iv_location_margin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_location_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_location_name_margin"

            android:gravity="center"
            android:textColor="@color/black"

            android:textSize="@dimen/medium_text"
            app:layout_constraintEnd_toStartOf="@+id/tv_location_temperature"
            app:layout_constraintStart_toEndOf="@+id/iv_location"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_location_temperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/tv_location_temperature_margin"

            android:gravity="center"

            android:textSize="@dimen/medium_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_location_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_location_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/tv_location_summary_margin"
            android:gravity="center"

            android:textSize="@dimen/small_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_location"
            app:layout_constraintTop_toBottomOf="@+id/tv_location_temperature" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_missing_network"
    android:padding="@dimen/layout_padding">

    <ImageView
        android:id="@+id/iv_clouds_missing_network"
        android:layout_width="@dimen/iv_clouds_missing_network_width"
        android:layout_height="@dimen/iv_clouds_missing_network_height"
        android:layout_marginEnd="@dimen/iv_clouds_missing_network_margin_end"
        android:layout_marginStart="@dimen/iv_clouds_missing_network_margin_start"
        android:layout_marginTop="@dimen/iv_clouds_missing_network_margin_top"

        app:layout_constraintBottom_toTopOf="@+id/tv_app_name_missing_network"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_thunderstorm" />

    <TextView
        android:id="@+id/tv_app_name_missing_network"
        android:layout_width="@dimen/zero_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tv_app_name_missing_network_margin_bottom"
        android:layout_marginEnd="@dimen/tv_app_name_missing_network_margin_end"
        android:layout_marginStart="@dimen/tv_app_name_missing_network_margin_start"
        android:layout_marginTop="@dimen/tv_app_name_missing_network_margin_top"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/extra_large_text"
        app:layout_constraintBottom_toTopOf="@+id/tv_missing_connection_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_clouds_missing_network" />

    <TextView
        android:id="@+id/tv_missing_connection_header"
        android:layout_width="@dimen/zero_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tv_missing_connection_header_margin_end"
        android:layout_marginStart="@dimen/tv_missing_connection_header_margin_start"
        android:layout_marginTop="@dimen/tv_missing_connection_header_margin_top"
        android:gravity="center"
        android:text="@string/missing_network"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="@dimen/medium_text"
        app:layout_constraintBottom_toTopOf="@+id/tv_try_again_missing_network"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_name_missing_network" />

    <TextView
        android:id="@+id/tv_try_again_missing_network"
        android:layout_width="@dimen/zero_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tv_try_again_missing_network_margin_end"
        android:layout_marginStart="@dimen/tv_try_again_missing_network_margin_start"
        android:gravity="top|center_horizontal"
        android:text="@string/try_again"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_missing_connection_header" />

</android.support.constraint.ConstraintLayout>